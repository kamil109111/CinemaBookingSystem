@model CinemaBookingSystem.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.Id" />
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Description" class="control-label"></label>
                <input asp-for="Movie.Description" class="form-control" type="text" />
                <span asp-validation-for="Movie.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie.ReleaseDate" class="form-control" type="date" />
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.RunningTime" class="control-label"></label>
                <input asp-for="Movie.RunningTime" class="form-control" />
                <span asp-validation-for="Movie.RunningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Director" class="control-label"></label>
                <input asp-for="Movie.Director" class="form-control" />
                <span asp-validation-for="Movie.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Cast" class="control-label"></label>
                <input asp-for="Movie.Cast" class="form-control" />
                <span asp-validation-for="Movie.Cast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Production" class="control-label"></label>
                <input asp-for="Movie.Production" class="form-control" />
                <span asp-validation-for="Movie.Production" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.OriginalLanguange" class="control-label"></label>
                <input asp-for="Movie.OriginalLanguange" class="form-control" />
                <span asp-validation-for="Movie.OriginalLanguange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.AgeRestriction" class="control-label"></label>
                <input asp-for="Movie.AgeRestriction" class="form-control" />
                <span asp-validation-for="Movie.AgeRestriction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.GenreId" class="control-label"></label>
                @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select movie genre", new { @class = "form-control" })
                <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
